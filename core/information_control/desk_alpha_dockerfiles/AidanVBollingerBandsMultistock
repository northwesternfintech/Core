# syntax=docker/dockerfile:1 
FROM python:3.10 
# credentials are required for private repositories
ARG PASSWORD
ARG USERNAME
ENV PASSWORD=$PASSWORD
ENV USERNAME=$USERNAME
# install app dependencies 
RUN apt-get update && apt-get install -y python3.10 python3-pip wget && apt-get install unzip 
# install app 
RUN wget https://api.github.com/repos/$USERNAME/Desk-Alpha-Fork/zipball/rl-av-dev -O Desk-Alpha-Fork.zip --header "Authorization: token $PASSWORD" && \ 
unzip -d . Desk-Alpha-Fork.zip && rm Desk-Alpha-Fork.zip && mv $USERNAME-Desk-Alpha-Fork-* Desk-Alpha-Fork && cd Desk-Alpha-Fork/Strats/BollingerBands && find . -type d -regex "\./$USERNAME.*" -exec rm -rf {} \; 

WORKDIR Desk-Alpha-Fork/Strats/BollingerBands
CMD ["python3", "BollingerBandsMultiStock.py"] 
